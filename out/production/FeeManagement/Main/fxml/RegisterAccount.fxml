<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="Main.Controller.RegisterAccountController"
          prefHeight="400.0" prefWidth="400.0" alignment="center" hgap="10" vgap="10"
          gridLinesVisible="false">
    <columnConstraints>

    </columnConstraints>
    <Label fx:id="announcement" GridPane.columnSpan="2" GridPane.columnIndex="1" GridPane.rowIndex="0">
        <font>
            <Font name="sans-serif" size="12"/>
        </font>
    </Label>
    <Label text="Username: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="userField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label text="Password: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label text="Employee's Name: " GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="employeeField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Label text="Email: " GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Label text="Phone: " GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <Label text="Skills: " GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="skillsField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <Button fx:id="createAccountBtn" text="create account"  GridPane.halignment="LEFT" GridPane.columnSpan="1" GridPane.columnIndex="1" GridPane.rowIndex="7"
    onAction="#CreateAccount" />
</GridPane>
